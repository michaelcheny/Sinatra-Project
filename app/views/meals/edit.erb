


<div class="meals">


<form action="/meals/<%= @meal.id %>" method="post" class="forms">

  <input type="hidden" name="_method" value="patch">
  <h3>Hello <%= @current_user.name %>, edit your meal</h3>
  
  <input type="text" name="meal[name]" id="name" placeholder="Name: <%= @meal.name %>" value="<%= @meal.name %>"><br>
  
  <input type="text" name="meal[calories]" id="calories" placeholder="Calories: <%= @meal.calories %>" value="<%= @meal.calories %>"><br>

  <!--
  <input type="text" name="meal[created_at]" id="created_at" placeholder="Added at: <%= @meal.created_at %>"><br>
  
<% if !!@messedup %>

  <p class="errors">You messed up </p>

<% end %>
-->

<% if @meal && @meal.errors.any? %>
  <% @meal.errors.full_messages.each do |error| %>

    <p class="errors"><%= error %></p>
    
  <% end %>
<% end %>


  <input type="submit" value="Edit Meal">

</form>

<% if @meal.user == current_user %>
  <form action="/meals/<%= @meal.id %>" method="post">
  
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete Meal">
  
  </form>
<% end %>

</div>