
<% if @meals.empty? %>

  <h3 class="errors">You need to add a meal, hungry child.</h3>

<% else %>

  <h3 class="meal_content">All Logged Meals</h3>

    <a class="meal_content" href="/meals/today">sort by meals from today only</a>
  
    <% @sorted_meals.each do |meal| %>
      <div class="meals">
        <p class="meal_content">Name: <%= meal.name %></p>
        <p class="meal_content">Calories: <%= meal.calories %></p>
        <p class="meal_content">Added on: <%= meal.created_at %></p> 
        <a class="submissionbutton" class="meal_content" href="/meals/<%= meal.id %>/edit">Edit</a>
        <br><br>
      </div>
    <% end %>
  
<% end %>
