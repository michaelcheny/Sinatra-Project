<% if @meals.empty? %>

  <h4 class="errors">You need to add a meal, hungry child.</h4><a class="submissionbutton" href="/meals/new">Add one now</a>

<% else %>

  <h3>All Logged Meals</h3>
  
  <% @sorted_meals.each do |meal| %>
    <div class="meals">
      <p class="meal_content">Name: <span class="bold"><%= meal.name.split.map(&:capitalize).join(' ') %></span></p>
      <p class="meal_content">Calories: <span class="bold"><%= meal.calories %></span></p>
      <p class="meal_content">Date Added: <span class="bold"><%= meal.created_at.strftime("%A, %B %d, %Y") %></span></p> 

      <% if meal.notes != "" %>
      <p class="meal_content">Notes: <%= meal.notes %></p>
      <% end %>
      
      <a class="submissionbutton" class="meal_content" href="/meals/<%= meal.id %>/edit">Edit</a>
      <br><br>
    </div>
  <% end %>
  
<% end %>
