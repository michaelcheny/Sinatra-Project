<% if @sorted_meals.empty?  %>

  <h4 class="errors">There are no meals yet, be the first one to add one.</h4> <a class="submissionbutton" href="/meals/new">Add one now</a>

<% else %>

  <h3>Meals Added By All Users</h3>

  <% @sorted_meals.each do |meal|  %>
    <div class="meals">
      <p class="meal_content">Name: </p>
      <span class="bold"><%= meal.name %></span>
      <p class="meal_content">Calories: </p>
      <span class="bold"><%= meal.calories %></span>
      <p class="meal_content">Added by: </p>
      <span class="bold"><%= meal.user.username.capitalize %></span>
      <p class="meal_content">Date Added: </p>
      <span class="bold"><%= meal.created_at.strftime("%A, %B %d, %Y") %></span>
      <% if meal.notes != "" %>
        <p class="meal_content">Notes:</p>
       <%= meal.notes %> 
      <% end %>
      <!--only shows edit option if meal created by current user-->
      <% if current_user == meal.user %>
        <br><br><a class="submissionbutton" class="meal_content" href="/meals/<%= meal.id %>/edit">Edit</a><br><br>
      <% end %>
    </div>

  <% end %>
<% end %>