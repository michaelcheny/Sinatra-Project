<% MealHelper.meals_from_today(@meals).sort_by{|m| m.created_at}.reverse.each do |meal| %>
  <div class="meals">
    <p class="meal_content">Name: <%= meal.name %></p>
    <p class="meal_content">Calories: <%= meal.calories %> Calories.</p>
    <p class="meal_content">Added on: <%= meal.created_at.strftime("%A, %B %d, %Y") %></p> 
    <a  class="meal_content" href="/meals/<%= meal.id %>/edit">Edit</a>
    <br><br>
  </div>
<% end %>