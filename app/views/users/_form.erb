

<form class="biggerfont" action="/home/<%= current_user.id %>" method="post" class="forms">


<input id="hidden" type="hidden" name="_method" value="patch">

<label for="age">Age:</label><br>
<input class="submissionfield" type="text" name="user[age]" id="age" value="<%= current_user.age %>" placeholder="Example: 53" required><br>
<label for="height">Height in inches:</label><br>
<input class="submissionfield" type="text" name="user[height]" id="height" value="<%= current_user.height %>" placeholder="Example: 65" required><br>
<label for="weight">Weight in pounds:</label><br>
<input class="submissionfield" type="text" name="user[weight]" id="weight" value="<%= current_user.weight %>" placeholder="Example: 205" required>

<% if @user && @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>
    <p class="errors"><%= error %></p>
  <% end %>
<% end %>

<br><br>

<label for="gender">Gender:</label><br>
<input type="radio" name="user[gender]" id="gender" value="male" required>
<label for="gender">Male</label><br>
<input type="radio" name="user[gender]" id="gender" value="female">
<label for="gender">Female</label><br><br>

<label for="activity_level">Activity level:</label><br>
<input type="radio" name="user[activity_level]" id="activity_level_1" value="1" required>
<label for="activity_level_1">Sedentary (spend most of day sitting)</label><br>
<input type="radio" name="user[activity_level]" id="activity_level_2" value="2">
<label for="activity_level_2">Low-Active (spend good part of day on feet, or mild workout once or twice a week)</label><br>
<input type="radio" name="user[activity_level]" id="activity_level_3" value="3">
<label for="activity_level_3">Active (spend good part of dasy doing physical activity, or workout 3+ times a week)</label><br>
<input type="radio" name="user[activity_level]" id="activity_level_4" value="4">
<label for="activity_level_4">Very Active (spend most of day doing heavy physical activity, or workout 5 times a week)</label><br><br>
<input class="submissionbutton" type="submit" value="Edit User">

</form><br>
