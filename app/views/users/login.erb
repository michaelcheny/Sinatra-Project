
<form action="/login" method="post" class="forms">

  <!-- the form for logging in -->
  <h3>Please Sign In</h3>

  <label for="username">Username:</label><br>
  <input class="submissionfield" type="text" name="username" id="username" placeholder="Username"><br>

  <label for="password">Password:</label><br>
  <input class="submissionfield" type="password" name="password" id="password" placeholder="Password"><br>

  <!-- Error message for when user messes up their log in. -->
  <% if @failed %>
    <p class="errors">Account doesn't exist or password is incorrent, try again</p>
  <% end %>

  <br>
  <input class="submissionbutton" type="submit" value="Login">



</form>