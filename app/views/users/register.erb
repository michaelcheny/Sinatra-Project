


<form action="/register" method="post" class="forms">

<h3>Register Here</h3>

<input type="text" name="user[name]" placeholder="Name" required><br>

<input type="text" name="user[username]" placeholder="Username" required><br>

<input type="password" name="user[password]" placeholder="Password(6-20)" required><br>

<input type="password" name="user[password_confirmation]" placeholder="Confirm your password" required><br>

<% if @user && @user.errors.any? %>
  <% @user.errors.full_messages.each do |error| %>

    <p class="errors"><%= error %></p>
    
  <% end %>
<% end %>

<input class="submissionbutton" type="submit" value="Create Account">

</form>
